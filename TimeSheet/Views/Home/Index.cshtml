@model IEnumerable<TimeSheet.Models.tblEmployee>

@{
    ViewBag.Title = "Index";
}

<h2>Fitiri TimeSheet</h2>
<p>
    <ul>
        <li>    @Html.ActionLink("Home", "index","Home") </li>
        <li>    @Html.ActionLink("Employee", "index", "Employee") </li>
        <li>    @Html.ActionLink("TimeSheet", "index", "TimeSheet") </li>
    </ul>
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @if(item.InOffice==false) {@Html.ActionLink("In", "CheckIn", new {  id=item.EmpID });} 
            @if (item.InOffice == true) { @Html.ActionLink("Out", "CheckOut", new { id = item.EmpID }); }
        </td>
    </tr>
}

</table>
