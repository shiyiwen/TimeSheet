@model IEnumerable<TimeSheet.Models.tblEmployee>

@{
    ViewBag.Title = "Index";
}
@RenderPage("~/Shared/_Header.cshtml")
@RenderPage("~/Shared/_Navigation.cshtml")

<div class="container">
    <h2>Employee</h2>
    <p align="center">
        @Html.ActionLink("Create New", "Create", null, new { @class = "button" })
    </p>
    <br>
    <div class="employee">
        <table id="tblEmployee">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th> </th>
                </tr>
                <tr>
                    <td>
                        <input id="SearchFirstName" type="text" placeholder="First Name" class="textbox" />
                    </td>
                    <td>
                        <input id="SearchLastName" type="text" placeholder="Last Name" class="textbox" />
                    </td>
                    <td>
                        <input id="SearchEmail" type="text" placeholder="Email" class="textbox" />
                    </td>
                    <td>
                        <input id="ResetEmployeeSearch" type="button" value="Reset" class="button" />
                    </td>
                </tr>
            </thead>

            <tbody id="tblEmployeeBody">
                @foreach (var item in Model)
                {
                    <tr class="selected">
                        <td class="col1">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="col2">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td class="col3">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        @if (!item.del)
                        {
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.EmpID }, new { @class = "tblactionlink" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.EmpID }, new { @class = "tblactionlink" }) |
                                @Html.ActionLink("Disable", "Delete", new { id = item.EmpID }, new { @class = "tblactionlink" })
                            </td>
                        }
                        else
                        {
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.EmpID }, new { @class = "tblactionlink" }) |
                                @Html.ActionLink("Enable", "Enable", new { id = item.EmpID }, new { @class = "tblactionlink" })
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@RenderPage("~/Shared/_Footer.cshtml")

<script type="text/javascript" src="~/js/employee.js"></script>