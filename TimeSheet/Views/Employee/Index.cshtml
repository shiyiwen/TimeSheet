@model IEnumerable<TimeSheet.Models.tblEmployee>

@{
    ViewBag.Title = "Index";
}
@RenderPage("~/Shared/_Header.cshtml")
@RenderPage("~/Shared/_Navigation.cshtml")
<div class="container">
    <h2>Employee</h2>
    <p align="center">
        @Html.ActionLink("Create New", "Create", null, new { @class = "button" })
    </p>
    <br>
    <div class="employee">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th> </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    @if (!item.del)
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmpID }, new { @class = "tblactionlink" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.EmpID }, new { @class = "tblactionlink" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.EmpID }, new { @class = "tblactionlink" })
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.EmpID }, new { @class = "tblactionlink" })
                        </td>
                    }

    
                </tr>
            }
        </table>
    </div>
</div>
@RenderPage("~/Shared/_Footer.cshtml")