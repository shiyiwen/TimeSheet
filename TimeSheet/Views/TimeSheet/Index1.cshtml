@model IEnumerable<TimeSheet.Models.tblTimeSheet>

@{
    ViewBag.Title = "Index";
}

<h2>Timesheet</h2>
<p>
    <ul>
        <li>    @Html.ActionLink("Home", "index", "Home") </li>
        <li>    @Html.ActionLink("Employee", "index", "Employee") </li>
        <li>    @Html.ActionLink("TimeSheet", "index", "TimeSheet") </li>
    </ul>
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tblEmployee.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblEmployee.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TextBox1)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tblEmployee.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblEmployee.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OutTime)
        </td>
        <td>
            @{  
            item.TotalHours = item.OutTime - item.InTime;
            @Html.DisplayFor(modelItem => item.TotalHours)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TextBox1)
        </td>
    </tr>
}

</table>
